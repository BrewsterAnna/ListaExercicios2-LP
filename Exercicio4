//Faça um algoritmo que leia três números e mostre o maior número.
package listaexercicios2;

import java.util.Scanner;

public class Exercicio4 {
    public static void main(String[] args) {
        int num1,num2,num3;
        Scanner ler = new Scanner(System.in);
        
        System.out.println("Insira o primeiro número: ");
        num1 = ler.nextInt();
        System.out.println("Insira o segundo número: ");
        num2 = ler.nextInt();
        System.out.println("Insira o terceiro número: ");
        num3 = ler.nextInt();
        
        if ((num1>num2)&&(num1>num3)){
            System.out.println("Primeiro número é o maior: "+num1);
        } else if ((num2>num1)&&(num2>num3)){
            System.out.println("Segundo número é o maior: "+num2);
        }   else{
            System.out.println("Terceiro número é o maior: "+num3);
        }
    }    
}
