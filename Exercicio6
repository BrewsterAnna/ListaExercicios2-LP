//Faça um algoritmo que leia um caractere e informe se o mesmo é uma vogal ou não. 
package listaexercicios2;

import java.util.Scanner;

public class Exercicio6 {
    public static void main(String[] args) {
        char letra;
        Scanner ler  = new Scanner (System.in);
        
        System.out.println("Entre com a letra: ");
        letra = ler.nextLine().charAt(0);
        
        switch (letra){
            case 'a':
            case 'e':
            case 'i':
            case 'o':
            case 'u':
                
            System.out.printf("A letra %s é uma vogal!", letra);
            break;
            default:
                System.out.printf("A letra %s é uma consoante!", letra);
       }
    }
}
